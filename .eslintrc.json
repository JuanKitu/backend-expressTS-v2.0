{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "linebreak-style":"off",
        "indent": "off",
        "import/no-unresolved":"off",
        "import/extensions": "off",
        "import/prefer-default-export":"off",
        "no-unused-expressions": ["error", { "allowTernary": true }],
        "no-console":"error",
        "max-len":["error", {"code":150}]
    },
    "settings": {
        "import/resolver": {
            "node": {
                "extensions": [".js", ".jsx", ".ts", ".tsx"]
            }
        }
    }
}
